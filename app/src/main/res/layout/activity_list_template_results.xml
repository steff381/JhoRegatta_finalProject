<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aad.finalproject.jhoregatta.ListTemplateResults">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:baselineAligned="false">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Finish!"
            android:layout_marginRight="5dp"
            android:id="@+id/btn_boat_finished"
            android:layout_gravity="center_vertical"
            android:focusable="false" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Id"
            android:id="@+id/txt_hd_results_ID"
            android:layout_weight="0"
            android:visibility="invisible"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PHRF"
            android:id="@+id/txt_hd_results_PHRF"
            android:layout_weight="0"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Visible"
            android:id="@+id/txt_hd_results_Visible"
            android:layout_weight="0"
            android:visibility="invisible" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Class"
            android:id="@+id/txt_hd_results_Class"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/txt_hd_results_Name"
            android:layout_weight="3"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sail Num"
            android:id="@+id/txt_hd_results_SailNum"
            android:layout_weight="3"
            android:layout_gravity="center_vertical" />
    </TableRow>

</RelativeLayout>
