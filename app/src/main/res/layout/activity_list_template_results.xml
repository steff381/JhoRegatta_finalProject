<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aad.finalproject.jhoregatta.ListTemplateResults">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="     Finish!    "
            android:layout_margin="5dp"
            android:id="@+id/btn_boat_finished"
            android:layout_gravity="center_vertical"
            android:focusable="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="5dp"
            android:layout_margin="5dp"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="Reset"
            android:id="@+id/btn_boat_reset_finished"
            android:layout_gravity="center_vertical"
            android:focusable="false"
            android:visibility="gone"
            android:padding="7dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hd_results_ID"
            android:layout_weight="0"
            android:visibility="invisible"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hd_results_Visible"
            android:layout_weight="0"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hd_results_race_id"
            android:layout_weight="0"
            android:visibility="invisible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_hd_results_boat_id"
            android:layout_weight="0"
            android:visibility="invisible" />



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Class"
            android:id="@+id/txt_hd_results_Class"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:linksClickable="false"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Name"
            android:id="@+id/txt_hd_results_Name"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Sail Num"
            android:id="@+id/txt_hd_results_SailNum"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="finish time"
            android:id="@+id/txt_hd_finish_time"
            android:layout_weight="3"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />
    </TableRow>

</RelativeLayout>
