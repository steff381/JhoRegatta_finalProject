<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:id="@+id/btn_nav_Settings"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="navigateToSettings"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Races"
        android:id="@+id/btn_nav_RaceMenu"
        android:layout_above="@+id/btn_nav_Settings"
        android:onClick="navigateToRaceMenu"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Boats"
        android:id="@+id/btn_nav_BoatMenu"
        android:layout_above="@+id/btn_nav_RaceMenu"
        android:onClick="navigateToBoatMenu"/>

</RelativeLayout>
